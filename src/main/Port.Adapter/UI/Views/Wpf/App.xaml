<Application x:Class="works.ei8.Cortex.Diary.Port.Adapter.UI.Views.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:works.ei8.Cortex.Diary.Port.Adapter.UI.Views.Wpf"
             xmlns:dialogs="clr-namespace:works.ei8.Cortex.Diary.Port.Adapter.UI.ViewModels.Dialogs;assembly=ViewModels"
             xmlns:wpfdialogs="clr-namespace:works.ei8.Cortex.Diary.Port.Adapter.UI.Views.Wpf.Dialogs"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Views.Wpf;component/Themes/MaterialDesign.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Views.Wpf;component/Themes/Colours.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type dialogs:DialogYesNoViewModel}">
                <wpfdialogs:DialogYesNoView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type dialogs:DialogSelectNeuronViewModel}">
                <wpfdialogs:DialogSelectNeuronView />
            </DataTemplate>
        </ResourceDictionary>        
    </Application.Resources>
</Application>
