                                <Canvas Width="24" Height="24">
                                    <Path Fill="{DynamicResource AccentSelectedColorBrush}" />
                                </Canvas>
                            </Button>

                            <Button Visibility="{Binding IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
