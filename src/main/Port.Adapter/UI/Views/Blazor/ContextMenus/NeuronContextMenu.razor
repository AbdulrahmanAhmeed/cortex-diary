@using ei8.Cortex.Diary.Port.Adapter.UI.ViewModels

@if (this.IsVisible)
{
    <div class="modal" tabindex="-1" style="display:block" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Select Action</h3>
                    <!-- Button to close the popup -->
                    <button type="button" class="close" @onclick="() => this.OnOptionSelected.InvokeAsync(ContextMenuOption.New)">
                        <span aria-hidden="true">X</span>
                    </button>
                </div>
                <!-- Edit form for the current forecast -->
                <div class="modal-body">
                    <table style="width: 100%; height: 100%">
                        <tr>
                            <td style="vertical-align: bottom; padding-left: 5px; padding-bottom: 3px;">
                                <button @onclick="() => this.OnOptionSelected.InvokeAsync(ContextMenuOption.Edit)">Edit</button>
                            </td>
                            <td style="vertical-align: bottom; padding-left: 5px; padding-bottom: 3px;">
                                <button @onclick="() => this.OnOptionSelected.InvokeAsync(ContextMenuOption.Delete)">Delete</button>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
 @code {
[Parameter]
public EventCallback<ContextMenuOption> OnOptionSelected { get; set; }

[Parameter]
public bool IsVisible { get; set; }
}
